{
  "name": "@david-tobi-peter/request-tracer",
  "version": "1.0.1",
  "description": "Low-level HTTP request tracer with DNS, TCP, TLS, and HTTP timing measurements",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "request-tracer": "./dist/cli/main.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "start": "node ./dist/cli/main.js",
    "dev": "tsx src/cli/main.ts",
    "prepublishOnly": "npm run build",
    "postbuild": "chmod +x ./dist/cli/main.js"
  },
  "keywords": [
    "http",
    "tracer",
    "dns",
    "tcp",
    "tls",
    "network",
    "timing",
    "performance",
    "diagnostics",
    "debugging"
  ],
  "author": {
    "name": "David Oluwatobi",
    "email": "davidoluwatobi41@gmail.com"
  },
  "maintainers": [
    {
      "name": "David Oluwatobi",
      "email": "davidoluwatobi41@gmail.com"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/david-tobi-peter/request-tracer.git"
  },
  "bugs": {
    "url": "https://github.com/david-tobi-peter/request-tracer/issues"
  },
  "homepage": "https://github.com/david-tobi-peter/request-tracer#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/yargs": "^17.0.35",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "yargs": "^18.0.0"
  }
}
